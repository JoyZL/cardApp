		<div id="background" class="background"></div>
		<script src='/public/js/fss.min.js'></script>		
		<script>

    var background = document.getElementById('background');
    var renderer = new FSS.CanvasRenderer();
    var scene = new FSS.Scene();
    var light = new FSS.Light('#919007', '#ffb400');
    var geometry = new FSS.Plane(window.innerWidth, window.innerHeight, 6, 4);
    var material = new FSS.Material('#FFFFFF', '#FFFFFF');
    var mesh = new FSS.Mesh(geometry, material);
    var now, start = Date.now();



    function initialise() {
      scene.add(mesh);
      scene.add(light);
      background.appendChild(renderer.element);
      window.addEventListener('resize', resize);

    }

    function resize() {
      renderer.setSize(background.offsetWidth, background.offsetHeight);
    }

    function animate() {
      now = Date.now() - start;
      light.setPosition(300*Math.sin(now*0.001), 200*Math.cos(now*0.0005), 60);
      renderer.render(scene);
      requestAnimationFrame(animate);
    }

    initialise();
    resize();
    animate();

    </script>

